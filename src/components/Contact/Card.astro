---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div class="flex-auto flex-shrink-0 h-full">
  <div
    class="bg-gradient-to-tr from-neutral-200 to-base-300 rounded-md py-4 flex flex-col justify-center items-center shadow-md gap-4 w-full"
  >
    <h3 class="font-semibold text-lg">{title}</h3>
    <slot />
  </div>
</div>
