---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR" class="scroll-smooth scroll-p-[60px] md:scroll-p-[90px]">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Escritório de Advocacia Criminal. Atendimento 24 horas por dia em Passo Fundo e região. Consultas e suporte jurídico completo."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      property="og:description"
      content="Escritório de Advocacia Criminal. Atendimento 24 horas por dia em Passo Fundo e região. Consultas e suporte jurídico completo."
    />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="pt_BR" />
  </head>
  <body class="min-h-screen antialiased">
    <slot />
  </body>

  <style is:global>
    @font-face {
      font-display: swap;
      font-family: 'Noto Serif';
      font-style: normal;
      font-weight: 500;
      src: url('/fonts/noto-serif-v23-latin-500.woff2') format('woff2');
    }

    @font-face {
      font-display: swap;
      font-family: 'Noto Serif';
      font-style: normal;
      font-weight: 600;
      src: url('/fonts/noto-serif-v23-latin-600.woff2') format('woff2');
    }

    @font-face {
      font-display: swap;
      font-family: 'Noto Serif';
      font-style: normal;
      font-weight: 700;
      src: url('/fonts/noto-serif-v23-latin-700.woff2') format('woff2');
    }

    @font-face {
      font-display: swap;
      font-family: 'Noto Sans';
      font-style: normal;
      font-weight: 300;
      src: url('/fonts/noto-sans-v36-latin-300.woff2') format('woff2');
    }

    @font-face {
      font-display: swap;
      font-family: 'Noto Sans';
      font-style: normal;
      font-weight: 400;
      src: url('/fonts/noto-sans-v36-latin-regular.woff2') format('woff2');
    }

    @font-face {
      font-display: swap;
      font-family: 'Noto Sans';
      font-style: normal;
      font-weight: 500;
      src: url('/fonts/noto-sans-v36-latin-500.woff2') format('woff2');
    }

    @font-face {
      font-display: swap;
      font-family: 'Noto Sans';
      font-style: normal;
      font-weight: 600;
      src: url('/fonts/noto-sans-v36-latin-600.woff2') format('woff2');
    }

    @font-face {
      font-display: swap;
      font-family: 'Noto Sans';
      font-style: normal;
      font-weight: 700;
      src: url('/fonts/noto-sans-v36-latin-700.woff2') format('woff2');
    }

    @font-face {
      font-display: swap;
      font-family: 'Noto Sans';
      font-style: normal;
      font-weight: 800;
      src: url('/fonts/noto-sans-v36-latin-800.woff2') format('woff2');
    }

    p {
      @apply max-w-prose;
      @apply mx-auto;
    }
  </style>
</html>
